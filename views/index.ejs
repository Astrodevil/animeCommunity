<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/index.css" />
    <title>HOME</title>
  </head>
  <body>
    <div class="navbar"></div>
    <div class="home"></div>
    <div class="top">
      <form action="/search" method="GET" enctype="multipart/form-data">
        <section>
          anime name:
          <input type="text" id="name" placeholder="anime name" name="name" />
        </section>
        <button>search</button>
      </form>
    </div>
    <div class="socials">
      <h1>Posts:</h1>
      <ul>
        <% tweets.forEach((t,index) => { %> <% const i = imgs[index] %>
        <li><%= t.tweet %> -<b><%= t.name %></b>(<%= t.date %> )</li>
        <img
          src="imgsApi/<%= i.filename %> "
          alt="no img"
          height="200px"
          width="200px"
        />

        <% }); %>
      </ul>
      <a href="/new">New Post</a>
    </div>
    <script src="js/index.js"></script>
  </body>
</html>
